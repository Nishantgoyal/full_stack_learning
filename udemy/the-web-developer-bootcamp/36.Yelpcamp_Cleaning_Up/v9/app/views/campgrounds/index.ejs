<%- include ("../partials/header.ejs") %>

<div class="container">
  <header class="jumbotron">
      <div class="container">
          <h1>Welcome to the Yelpcamp...!!</h1>
          <p class="lead">View our campgrounds. Lorem ipsum, dolor sit amet consectetur adipisicing elit. Quaerat, minima. Nisi dignissimos suscipit non et quibusdam quia quam distinctio similique fugiat sed harum repellendus ab fuga perspiciatis quo, ad a!</p>
          <div>
              <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground...!!!</a>
          </div>
      </div>
  </header>
 
  <div class="row text-center" style="display: flex; flex-wrap: wrap">
      <% campgrounds.forEach(function(campground){  %>
          <div class="col-md-3 col-sm-6">
              <div class="thumbnail">
                  <img class="img-fluid" src="<%= campground.image %>" alt="">
                  <div class="caption">
                      <h4>
                          <%= campground.name %>
                      </h4>
                  </div>
                  <p class="lead">
                    <a href="/campgrounds/<%= campground.id %>" class="btn btn-info">More Info</a>
                  </p>
              </div>
  
          </div>
      <% }) %>
  </div>
</div>

<%- include ("../partials/footer.ejs") %>

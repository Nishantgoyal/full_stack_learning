<%- include ("../partials/header.ejs") %>

<h1> <%= campground.name %> </h1>
<img src="<%= campground.image %>">
<p> <%= campground.desc %> </p>

<div>
  <a class="btn btn-success" href="/campgrounds/<%= campground.id %>/comments/new"> Add a new Comment </a>
</div>

<% campground.comments.forEach(function(comment) { %>
  <p> 
    <strong>
      <%= comment.author %> 
    </strong>
    - <%= comment.text %>
  </p>
<% }); %>

<%- include ("../partials/footer.ejs") %>

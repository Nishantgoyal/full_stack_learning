<%- include ("../partials/header.ejs") %>

<div class="row">
    <h1 style="text-align: center;">Add a new Comment for Campground: <em> <%= campground.name %></h1>
    <div style="width: 30%; margin:40px auto;">
        <form action="/campgrounds/<%= campground.id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[author]" placeholder="author">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Create new Comment">
            </div>
        </form>
    </div>
</div>


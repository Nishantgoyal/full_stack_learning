<%- include ("partials/header.ejs") %>

<div class="ui main text container segment">
    <div class="ui huge header">
      Edit Blog
    </div>
    <form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
        <div class="field">
          <label> Title
            <input type="text" name="blog[title]" value="<%= blog.title %>">
          </label>
        </div>
        <div class="field">
          <label> Image URL
          <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
          <label> Blog Post
          <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input type="submit" class="ui black basic button" value="Update Blog">
    </form>
</div>

